{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "semi": ["off"],
    "object-curly-spacing": ["off"],
    "react/jsx-filename-extension": ["off"],
    "comma-dangle": ["off"],
    "space-before-function-paren": ["off"],
    "arrow-parens": ["off"],
    "function-paren-newline": ["off"],

    "import/no-extraneous-dependencies": ["off"],

    "react/jsx-closing-bracket-location": ["off"]
  }
}
